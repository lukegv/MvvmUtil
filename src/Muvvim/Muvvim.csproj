<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <LanguageTargets>$(MSBuildExtensionsPath)\$(VisualStudioVersion)\Bin\Microsoft.CSharp.targets</LanguageTargets>
    <TargetFramework>net47</TargetFramework>

    <PackageProjectUrl>https://github.com/lukoerfer/muvvim</PackageProjectUrl>
    <Authors>Lukas Körfer</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/lukoerfer/muvvim.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>wpf mvvm</PackageTags>
    <Description>Utilities for Windows Presentation Framework (WPF) and the Model-View-ViewModel (MVVM) pattern</Description>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="PresentationCore" />
    <Reference Include="PresentationFramework" />
    <Reference Include="System.Xaml" />
    <Reference Include="WindowsBase" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="PropertyChanged.Fody" Version="3.0.1" />
  </ItemGroup>

</Project>
